echo "[info]"
echo "[info] ---- PLAYFRAMEWORK CORE TEST RUNNER"
echo "[info]"

set -e
export CURRENT=`pwd`
export FRAMEWORK_PATH=`pwd`/`dirname $0`

cd $FRAMEWORK_PATH

export PLAY=$FRAMEWORK_PATH/../play

./build "$@" publish-local

echo "[info]"
echo "[info] ---- RUNNING FRAMEWORK SPECS"
echo "[info]"

./build "$@" test

rm -rf ./logs

cd $FRAMEWORK_PATH/test/integrationtest

echo "[info]"
echo "[info] ---- RUNNING INTEGRATION TEST"
echo "[info]"

$PLAY "$@" clean-all test

cd $FRAMEWORK_PATH/test/integrationtest-java

echo "[info]"
echo "[info] ---- RUNNING JAVA INTEGRATION TEST"
echo "[info]"

$PLAY "$@" clean-all test

cd $FRAMEWORK_PATH/test/integrationtest-scala

echo "[info]"
echo "[info] ---- RUNNING SCALA INTEGRATION TEST"
echo "[info]"

$PLAY "$@" clean-all test

echo "[info]"
echo "[info] ---- TESTING SAMPLE APPLICATIONS"
echo "[info]"

x=`find $FRAMEWORK_PATH/../samples -name app`
for i in $(echo $x | tr ";" "\n")
do
  echo "[info]"
  echo "[info] ---- TESTING ${i/app/}"
  echo "[info]"
  cd ${i/app/}
  $PLAY "$@" clean-all test
done

echo "[info]"
echo "[info] ALL TESTS PASSED"
echo "[info]"

cd $CURRENT

